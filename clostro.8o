    letter 14 4 title-c
    letter 23 4 title-l
    letter 32 4 title-o
    letter 41 4 title-s

    letter 18 17 title-t
    letter 27 17 title-r
    letter 36 17 title-o

    loop
        vf := delay
        if vf == 0 begin
            vf := 5
            delay := vf
            move-all
        end
        ve := OCTO_KEY_Q if ve key then jump done
        ve := OCTO_KEY_E if ve key then jump done
        ve := OCTO_KEY_W if ve key then gohi
        ve := OCTO_KEY_S if ve key then golo
    again
    : done
    loop 
        while ve key
    again

