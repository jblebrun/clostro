: moveset
# px py start end mark direction(1=h, 2=v) 
  10 10  0     0   0    0

: dot
    0x80

: crosshair
            0x40
            0xA0
            0x40
            0x00

: main
    init b1
    init b2
    init b3
    init b4

    i := moveset
    load v6
    i := crosshair
    sprite px py 3

    loop
        check-keys

        tmp := delay
        if tmp == 0 begin
            #check-lines
            m b1
            m b2
            m b3
            m b4
            tmp := 1
            delay := tmp
        end

    again


