: main
    px := 0x20
    py := 0x10
    direction := 0
    draw-crosshair
    i := moveset
    save movedata
    next-level

    loop
        check-keys

        tmp := delay
        if tmp == 0 begin
            check-lines
            move-all
            tmp := 3
            delay := tmp
        end

    again


